extends ../layout

block content
    a(href='/usuarios') Volver

    br
    br
    br
    h1 Nuevo Usuario 
    br
    br

    form(action='/usuarios/create' method='post')
        .form-group
        label(for='nombre') Nombre:
        input#nombre.form-control(type='text' name='nombre' value= usuario.nombre class=errors.nombre ? 'is-invalid' : "")
        if errors.nombre
                small#nombreHelp.text-danger
                      =  error.nombre.message
        br    
        .form-group
        label(for='email') Email:
        input#email.form-control(type='text' name='email' value= usuario.email class=errors.email ? 'is-invalid' : "")
        if errors.email
                small#emailHelp.text-danger
                      =  error.email.message
        br 
        .form-group
        label(for='pwd') Password:
        input#password.form-control(type='password' name='password' value= usuario.password class=errors.password ? 'is-invalid' : "")
        if errors.password
                small#passwordHelp.text-danger
                      =  error.password.message
        br
           .form-group
        label(for='confim_pwd') Confirmar Password:
        input#password.form-control(type='password' name='confim_password' value= usuario.confim_password class=errors.confim_password ? 'is-invalid' : "")
        if errors.confim_password
                small#confim_passwordHelp.text-danger
                      =  error.confim_password.message
        input.btn(type='submit' value='ok')
